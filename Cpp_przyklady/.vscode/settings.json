    "files.exclude": {
        "*/*.exe": true
    },
    "code-runner.executorMap": {
        "javascript": "node",
        "php": "C:\\php\\php.exe",
        "python": "python",
        "perl": "perl",
        "ruby": "C:\\Ruby23-x64\\bin\\ruby.exe",
        "go": "go run",
        "html": "\"C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe\"",
        "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
        "c": "cd $dir && gcc $fileName $workspaceRoot\\00_my_lib\\my_lib.c -I $workspaceRoot\\00_my_lib -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        //kazdy plik w folderze do komplilacji - *.cpp
